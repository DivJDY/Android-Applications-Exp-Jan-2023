<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:repeat_toggle_modes="one"
        app:resize_mode="zoom"
        app:use_controller="false" />

    <FrameLayout
        android:id="@+id/playerViewFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_user_name"
        style="@style/text.small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_s"
        android:layout_marginEnd="@dimen/spacing_larger"
        android:layout_marginBottom="@dimen/spacing_xxs"
        android:text="@string/app_name"
        app:layout_constraintBottom_toTopOf="@+id/tv_video_description"
        app:layout_constraintStart_toStartOf="parent" />

    <com.aop.interplay.custom_views.truncatingtextview.TruncatingTextView
        android:id="@+id/tv_video_description"
        android:layout_width="@dimen/spacing_zero"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_s"
        android:layout_marginEnd="@dimen/spacing_larger"
        android:layout_marginBottom="@dimen/spacing_s"
        android:text="@string/home_screen_title1"
        android:textColor="@color/white"
        android:textSize="@dimen/size_s"
        app:layout_constraintBottom_toTopOf="@id/barrier_cta"
        app:layout_constraintEnd_toStartOf="@id/iv_profile"
        app:layout_constraintStart_toStartOf="parent" />

    <ToggleButton
        android:id="@+id/button_star"
        style="@style/toggleIcon"
        android:layout_width="36dp"
        android:layout_height="34dp"
        android:layout_marginBottom="@dimen/margin_large"
        android:background="@drawable/star_button_background"
        app:layout_constraintBottom_toTopOf="@+id/button_bookmark"
        app:layout_constraintEnd_toEndOf="@id/iv_profile"
        app:layout_constraintStart_toStartOf="@id/iv_profile" />

    <ToggleButton
        android:id="@+id/button_bookmark"
        style="@style/toggleIcon"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_marginBottom="@dimen/margin_large"
        android:background="@drawable/bookmark_button_background"
        app:layout_constraintBottom_toTopOf="@+id/button_share"
        app:layout_constraintEnd_toEndOf="@id/iv_profile"
        app:layout_constraintStart_toStartOf="@id/iv_profile" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/button_share"
        android:layout_width="34dp"
        android:layout_height="36dp"
        android:layout_marginBottom="@dimen/margin_large"
        app:layout_constraintBottom_toTopOf="@+id/iv_profile"
        app:layout_constraintEnd_toEndOf="@id/iv_profile"
        app:layout_constraintStart_toStartOf="@id/iv_profile"
        app:srcCompat="@drawable/icon_share_solid_default"
        app:tint="@android:color/white" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_profile"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginTop="@dimen/spacing_larger"
        android:layout_marginEnd="@dimen/spacing_xxxl"
        android:layout_marginBottom="@dimen/spacing_s"
        app:layout_constraintBottom_toTopOf="@id/barrier_cta"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_add_friend_default"
        app:layout_constraintBottom_toBottomOf="@id/iv_profile"
        app:layout_constraintEnd_toEndOf="@id/iv_profile" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_cta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="button_learn, button_try" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_learn"
        style="@style/button"
        android:layout_width="@dimen/spacing_zero"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_s"
        android:layout_marginEnd="@dimen/spacing_xxs"
        android:layout_marginBottom="@dimen/spacing_s"
        android:text="@string/learn_it_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideCenter"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_try"
        style="@style/button"
        android:layout_width="@dimen/spacing_zero"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_xxs"
        android:layout_marginEnd="@dimen/spacing_s"
        android:layout_marginBottom="@dimen/spacing_s"
        android:text="@string/try_it_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideCenter" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
